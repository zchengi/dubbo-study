<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		 http://code.alibabatech.com/schema/dubbo
		 http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="version-provider-app"/>

    <!-- 用 dubbo 协议在 20880 端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!-- 使用 zookeeper 进行注册中心化 -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <!-- 和本地 bean 一样实现服务 -->
    <bean id="versionServiceA" class="com.cheng.dubbo.version.VersionServiceImplA"/>
    <bean id="versionServiceB" class="com.cheng.dubbo.version.VersionServiceImplB"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.cheng.dubbo.ServiceAPI"
                   version="0.1"
                   timeout="10000"
                   executes="10"
                   ref="versionServiceA"/>

    <dubbo:service interface="com.cheng.dubbo.ServiceAPI"
                   version="0.2"
                   timeout="10000"
                   executes="10"
                   ref="versionServiceB"/>
</beans>
